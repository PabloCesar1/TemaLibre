<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#dcd370"
    android:orientation="vertical"
    tools:context="com.facci.sudokupe.FacilPE">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/txt_nombreJugador"
        android:textStyle="bold|italic"
        android:textColor="#b65555" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        android:layout_gravity="center"
        android:layout_marginTop="60dp">



        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/numero1"
            android:background="#97fdd7"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/numero2"
            android:background="#6bc6a4"
            android:textAlignment="center"
            android:textSize="20dp" />
        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:layout_row="0"
            android:layout_column="2"
            android:id="@+id/numero3"
            android:background="#60e0e9"
            android:textSize="20dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="4"
            android:layout_row="0"
            android:layout_column="3"
            android:id="@+id/numero4"
            android:layout_marginTop="0dp"
            android:layout_columnSpan="1"
            android:background="#48c5ce"
            android:textSize="38dp"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:textAlignment="center"
            android:padding="0dp" />


        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/numero5"
            android:background="#6bc6a4"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="20dp" />


        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="1"
            android:layout_row="1"
            android:layout_column="1"
            android:id="@+id/numero6"
            android:layout_marginTop="0dp"
            android:layout_columnSpan="1"
            android:background="#97fdd7"
            android:textSize="38dp"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:textAlignment="center"
            android:padding="0dp" />


        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="2"
            android:layout_row="1"
            android:layout_column="2"
            android:id="@+id/numero7"
            android:layout_marginTop="0dp"
            android:layout_columnSpan="1"
            android:background="#48c5ce"
            android:textSize="38dp"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:textAlignment="center"
            android:padding="0dp" />

        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:layout_row="1"
            android:layout_column="3"
            android:id="@+id/numero8"
            android:background="#60e0e9"
            android:textSize="20dp"
            android:textAlignment="center"
            android:padding="0dp" />

        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:layout_row="2"
            android:layout_column="0"
            android:id="@+id/numero9"
            android:background="#60e0e9"
            android:textSize="20dp"
            android:textAlignment="center" />

        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:layout_row="2"
            android:layout_column="1"
            android:id="@+id/numero10"
            android:background="#48c5ce"
            android:textAlignment="center"
            android:textSize="20dp" />
        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:layout_row="2"
            android:layout_column="2"
            android:id="@+id/numero11"
            android:background="#97fdd7"
            android:textAlignment="center"
            android:textSize="20dp" />
        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:layout_row="2"
            android:layout_column="3"
            android:id="@+id/numero12"
            android:background="#6bc6a4"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="3"
            android:layout_row="3"
            android:layout_column="0"
            android:id="@+id/numero13"
            android:layout_marginTop="0dp"
            android:layout_columnSpan="1"
            android:background="#48c5ce"
            android:textSize="38dp"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:textAlignment="center"
            android:padding="0dp" />
        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:layout_row="3"
            android:layout_column="1"
            android:id="@+id/numero14"
            android:background="#60e0e9"
            android:textAlignment="center"
            android:textSize="20dp" />
        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:layout_row="3"
            android:layout_column="2"
            android:id="@+id/numero15"
            android:background="#6bc6a4"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:layout_row="3"
            android:layout_column="3"
            android:id="@+id/numero16"
            android:background="#97fdd7"
            android:textAlignment="center"
            android:textSize="20dp" />
    </GridLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Comprobar"
        android:id="@+id/btn_comprobar"
        android:layout_gravity="center_horizontal"
        android:background="#358a92"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txt_resultado"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic" />


</LinearLayout>
